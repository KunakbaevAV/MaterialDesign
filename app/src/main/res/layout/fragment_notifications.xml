<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentNotifications">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/notifications"
        android:textSize="40sp"
        android:gravity="center_horizontal" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bell"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/ic_notifications_black_24dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/message"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_marginEnd="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/number_messages"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:minWidth="20dp"
        android:minHeight="16dp"
        android:background="@drawable/background_badge_new" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/md_action_button_frame_spec_height"
        android:backgroundTint="@color/colorAccentYellow" />


</FrameLayout>